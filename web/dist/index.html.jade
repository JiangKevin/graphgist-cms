doctype html

html(lang="en", ng-app="contentApp")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content="")
    meta(name="author", content="")
    link(rel="shortcut icon", href="assets/ico/favicon.ico")

    meta(name="twitter:site", content="@neo4j")
    meta(name="twitter:domain", content="http://neo4j.org")
    if gist.submitter_twitter
      meta(name="twitter:creator", content="@"+ gist.submitter_twitter)
    if gist.title
      meta(name="twitter:title", content=gist.title)
    if gist.summary
      meta(name="twitter:description", content=gist.summary)

    meta(name="twitter:card", content=(gist.poster_image ? 'summary_large_image' : 'summary'))

    meta(name="twitter:image:src", content=(gist.poster_image || '/assets/img/neo4j/neo4j-logo.png'))

    title Neo4j Gists

    link(type="text/css", rel="stylesheet", href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,400,300,600,700")

    // Bootstrap core CSS
    link(href="assets/lib/bootstrap/css/bootstrap.css", rel="stylesheet")

    // Custom styles for this template
    link(href="navbar-static-top.css", rel="stylesheet")

    // Owl Carousel Assets
    link(href="assets/lib/owl-carousel/owl.carousel.css", rel="stylesheet")
    link(href="assets/lib/owl-carousel/owl.theme.css", rel="stylesheet")

    // Prettify
    link(href="assets/js/google-code-prettify/prettify.css", rel="stylesheet")

    link(href="assets/css/custom.css", rel="stylesheet")

    link(href="assets/css/d3.css", rel="stylesheet")
    link(href="assets/css/datatable.css", rel="stylesheet")

    link(href="assets/css/style.css", rel="stylesheet")

    link(href="//cdnjs.cloudflare.com/ajax/libs/codemirror/4.3.0/codemirror.min.css", rel="stylesheet")
    link(href="//cdnjs.cloudflare.com/ajax/libs/codemirror/4.3.0/theme/neo.css", rel="stylesheet")

    // HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    | <!--[if lt IE 9]>
    |   <script src="/assets/js/ie9/html5shiv.js"></script>
    |   <script src="/assets/js/ie9/respond.min.js"></script>
    | <![endif]-->

    script var API_URL = '#{api_url}';

    style.
      #gist-link{
        /*background: #989898;*/
        color: black;
        font-size:15px;
      }
      #gist-link:hover{
        /*background: #989898;*/
        color: #989898;
      }

  body

    // Static navbar
    div(role="navigation").navbar.navbar-default
      .container
        .navbar-header
          button(type="button", data-toggle="collapse", data-target=".navbar-collapse").navbar-toggle
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar

          form.navbar-form.pull-right(style="width: 40%", ng-controller="GistSearchForm")
            .form-group
              .input-group
                input(type="text", ng-model="query", placeholder="Search for a GraphGist").form-control
                .input-group-addon
                  i.glyphicon.glyphicon-search
                #search-result(ng-show="query.length > 0")
                  div(ng-if="results")
                    .list-group
                      a.list-group-item(href="#!/gists/{{result.id}}/summary", ng-click="search_result_clicked()", ng-repeat="result in results")
                        .thumbnail.pull-right
                          img(src="{{result.poster_image}}")
                        {{result.title}}
                  div(ng-if="!results || !results.length")
                    .search-notice
                      span(ng-if="!results") Loading...
                      span(ng-if="results && !results.length") No results found

          .logo-well
            img(id="logo", alt="Neo4j World's Leading Graph Database", src="assets/img/logo-white.svg")

          a(href="#!/gists").navbar-brand
            .brand Neo4j GraphGists


        .navbar-collapse.collapse
          ul.nav.navbar-nav
            li: a(href="#!/gists/about") What is a GraphGist?
            li: a(href="#!/gists/challenge" style="color: red; font-weight: bold") Winter Challenge!
            li: a(href="#!/gists/submit") Submit a GraphGist
            li: a(href="http://www.neo4j.com") Neo4j
            li: a(href="/#!/gists/all") All GraphGists
            li &nbsp;

            li
              form.navbar-form
                .form-group
                  input(type="text", id="gist-id", placeholder="GitHub Gist / File / Dropbox URL").form-control

    div(ng-view)

    #mydiv
        img(src="assets/img/AjaxLoader.gif").ajax-loader

    script(src="assets/js/all.min.js")

  script.
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    //Allow Linker 
    ga('create', 'UA-1192232-34','auto', {'allowLinker': true});
    ga('send', 'pageview');

    // Load the plugin.
    ga('require', 'linker');

    // Define which domains to autoLink.
    ga('linker:autoLink', ['neo4j.org','neo4j.com','neotechnology.com','graphdatabases.com','graphconnect.com']);
