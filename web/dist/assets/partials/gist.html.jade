.container

  .row
    div
      ol.breadcrumb
        li
          a(href="#!") Home
        li
          a(href="/#!/gists") GraphGists
        li.active.title {{gist.title}}

  h2
    {{gist.title}}
    a.btn.btn-success.pull-right(href="{{gist.original_url}}", target="_blank", style="color: white; margin-left: 15px")
      i.glyphicon.glyphicon-file
      span Page Source

  .row#content
    div#loading-message(style="font-size: 5em; font-weight: bold; text-align: center")
      | {{loading_message}}
