pre {{gist}}

form(ng-submit="submit()", role="form").form-horizontal

  div.form-group
    label(for="title").col-sm-2.control-label Title
    div.col-sm-10
      input(type="text", id="title", ng-model="gist.title").form-control

  div.form-group
    label(for="url").col-sm-2.control-label URL
    div.col-sm-10
      input(type="text", id="url", ng-model="gist.url").form-control

  div.form-group
    label(for="poster_image").col-sm-2.control-label Poster Image URL
    div.col-sm-8
      input(type="text", id="poster_image", ng-model="gist.poster_image").form-control
    div.col-sm-2
      img(ng-src="{{gist.poster_image}}", style="max-height: 50px")

  div.form-group
    label(for="summary").col-sm-2.control-label Summary
    div.col-sm-10
      textarea(id="summary", ng-model="gist.summary", rows=5).form-control

  div.form-group
    label(for="description").col-sm-2.control-label Description
    div.col-sm-10
      textarea(id="description", ng-model="gist.description", rows=5).form-control

  div.form-group
    label(for="status").col-sm-2.control-label Status
    div.col-sm-10
      select(id="status", ng-model="gist.status", ng-options="option for option in ['live', 'candidate']", rows=5).form-control


  div.form-group
    label(for="status").col-sm-2.control-label
    div.col-sm-10
      input(type="submit" value="Update")

