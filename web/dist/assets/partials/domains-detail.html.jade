.container.hidden-content(ng-model='gist')
    .row
        div
          ol.breadcrumb
            li
              a(href='#') Home
            |           
            li
              a(href='#') Tags
            |           
            li.active {{domain.name}}

      .row
        .row
          .col-md-12
            h3.content-title {{domain.name}}
        |         
        .row
          .col-md-12
            span(ng-show='domain.heading!=null')
              .panel.panel-default
                // Default panel contents
                .panel-heading
                  h4
                    i {{domain.heading}}
                |                   
                |                   
                ul.list-group.list-group-details
                  .panel-heading
                    | {{domain.description}}
                    br
                    br
                    |                         
                    ul
                      div(ng-repeat='point in domain.list')
                        li {{point.toString()}}
                        br
                    |                         {{domain.description2}}
                    |                         
                    .row
                      br
                      |                         
                      .item-label.col-md-12.brand
                        a#gist-link(ng-href='{{domain.url}}') Read More &gt;
            |             
            .panel.panel-default
              .panel-heading GraphGists
              |               
              .panel-body
                #gist-list
                  a.thumbnail.gist.col-xs-12.col-sm-6.col-md-4.col-lg-3.col-md-offset-1(ng-repeat="gist in domain.related_gists", href="/#!/gists/{{gist.id}}/summary")
                    img(src="{{gist | posterImage}}")
                    .caption
                      h3 {{gist.title}}

        |       
        .clearfix.visible-xs


